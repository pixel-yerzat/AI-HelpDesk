# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=helpdesk
DB_USER=helpdesk
DB_PASSWORD=your_secure_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# LLM Providers
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key
LLM_PROVIDER=anthropic  # anthropic | openai

# Vector DB (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=helpdesk_kb

# Object Storage (MinIO/S3)
S3_ENDPOINT=localhost
S3_PORT=9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=helpdesk-attachments
S3_USE_SSL=false

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/telegram

# Email (IMAP)
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=support@example.com
IMAP_PASSWORD=your_email_password
IMAP_TLS=true

# Email (SMTP for sending)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=support@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=Support <support@example.com>

# WhatsApp (360dialog or Twilio)
WHATSAPP_PROVIDER=360dialog  # 360dialog | twilio
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=+1234567890

# Decision Engine Thresholds
THRESHOLD_AUTO_RESOLVE=0.90
THRESHOLD_DRAFT_MIN=0.65
THRESHOLD_TRIAGE=0.85

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
